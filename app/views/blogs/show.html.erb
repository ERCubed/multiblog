<p id="notice"><%= notice %></p>

<div class='row'>
	<div class='col-xs-8'>
		<h1><%= @blog.title %></h1>
		<p>A blog by <%= show_full_name(@blog.user_id) %></p>

		<% @posts.each do |post| %>
			<div class='row'>
				<div class='col-xs-12'>
					<div class="card">
					  <div class="card-block">
					    <h4 class="card-title"><%= post.title %></h4>
					</div>
					<div class="card-block">
						<p class="card-text">
							<%= post.body.html_safe %>
						</p>
					</div>
				</div>
				</div>
			</div>
		<% end %>

	</div>

	<div class='col-xs-4'>
		<% if user_signed_in? && @blog.user_id == current_user.id %>
		<div class="card card-success">
		  <div class="card-header">
		    <h3 class="card-header">Administer Your Blog</h3>
		  </div>
		  <div class="card-block">
		    <ul>
				<li><%= link_to 'Edit', edit_blog_path(@blog) %> (fix link to route to :slug/admin)</li>
				<li>Link to Posts Admin</li>
			</ul>
		  </div>
		</div>
		<% end %>

		<div class="card">
		  <div class="card-header">
		    <h3 class="card-header">Other Things</h3>
		  </div>
		  <div class="card-block">
		    <ul>
				<li>Tag Cloud?</li>
				<li>Disqus?</li>
			</ul>
		  </div>
		</div>

	</div>

</div>